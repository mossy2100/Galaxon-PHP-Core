{
    "name": "galaxon/core",
    "description": "Core PHP utilities for floats, integers, arrays, types, and string conversion with IEEE-754 support.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "utilities",
        "floats",
        "integers",
        "numbers",
        "arrays",
        "types",
        "stringify",
        "traits",
        "comparable",
        "equatable",
        "ieee-754",
        "math"
    ],
    "authors": [
        {
            "name": "Shaun Moss",
            "email": "shaun@astromultimedia.com"
        }
    ],
    "homepage": "https://github.com/mossy2100/Galaxon-PHP-Core",
    "support": {
        "issues": "https://github.com/mossy2100/Galaxon-PHP-Core/issues",
        "source": "https://github.com/mossy2100/Galaxon-PHP-Core"
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "galaxon/coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf -vp",
        "check": "vendor/bin/phpcs -s",
        "report": "vendor/bin/phpcs -q --report=summary",
        "analyze": "vendor/bin/phpstan analyze -l 9",
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml --do-not-cache-result",
        "coverage": "php scripts/coverage-check.php",
        "quality": [
            "@fix",
            "@check",
            "@analyze",
            "@test",
            "@coverage"
        ]
    },
    "extra": {
        "phpcodesniffer-search-depth": 3
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
